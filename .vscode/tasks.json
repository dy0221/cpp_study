{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				//단독 컴파일
				// "-g",
				// "${file}",
				// "-o",
				// "${fileDirname}/${fileBasenameNoExtension}"
				//여러개 같이 컴파일 할때
				"-fdiagnostics-color=always",
				"-g",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"${file}",
				"${fileDirname}/06project.cpp"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		}
	]
}